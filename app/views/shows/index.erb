<h3 class="table-heading">All TV Shows</h3>

<table>
  <thead>
    <tr>
      <th>Show</th>
      <th>Genre</th>
      <th>Network</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
    <tr>
      <td><a href="/shows/<%= show.slug %>"><%= show.name %></td>
      <td><%= show.genre %></td>
      <td><%= show.network.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="links-buttons">
  <a class="btn btn-outline-primary btn-sm" href="/watchlist" role="button">My Watchlist</a>
  <a class="btn btn-outline-info btn-sm" href="/shows">Browse Shows</a>
</div>
