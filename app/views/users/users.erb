<div class="list-view">
  <h4>See What Other Users Are Watching</h4><br>
    <% @users.each do |user| %>

      <% if user != current_user %>
        <h5><%= user.username %></h5>
        <% user.shows.each do |show| %>
          <a href="/shows/<%= show.slug %>"><%= show.name %></a><br>
        <% end %><br>
      <% end %>
    <% end %>
</div>

<div class="links-buttons">
  <a class="btn btn-outline-primary btn-sm" href="/watchlist" role="button">My Watchlist</a>
  <a class="btn btn-outline-info btn-sm" href="/shows">Browse Shows</a>
</div>
