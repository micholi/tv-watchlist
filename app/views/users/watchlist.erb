<% if flash.has?(:message) %>
  <div class="alert alert-success">
    <%= flash[:message] %>
  </div>
<% end %>

<% if @user.shows.count >= 1 %>
  <h3 class="table-heading"><%= @user.username %>'s Watchlist</h3>
  <table>
    <thead>
      <tr>
        <th>Show</th>
        <th>Genre</th>
        <th>Network</th>
      </tr>
    </thead>
    <tbody>
      <% @shows.each do |show| %>
      <tr>
        <td><a href="/shows/<%= show.slug %>"><%= show.name %></td>
        <td><%= show.genre %></td>
        <td><%= show.network.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="links-buttons">
    <a class="btn btn-outline-secondary btn-sm" href="/shows">Browse Shows</a>
    <a class="btn btn-info btn-sm" href="/shows/new" role="button">Add New Show</a>
  </div>
<% end %>

<% if @user.shows.count == 0 %>
  <div class="other-pages">
    <h5>Welcome to TV Watchlist, <%= @user.username %>!</h5>
    <h5>You haven't added any shows yet. Where would you like to begin?</h5><br>
    <a class="btn btn-outline-secondary btn-sm" href="/shows">Browse All Shows</a>
    <a class="btn btn-outline-secondary btn-sm" href="/users">View User Watchlists</a>
    <a class="btn btn-info btn-sm" href="/shows/new" role="button">Add New Show</a>
  </div>
<% end %>
